<h4 class="text-center">Create a new post</h4>

<div class="row">
	<div class="col-md-6 col-md-offset-3 ">
		<%= form_for(Post.new, url: posts_path, data: {temp: posts_path}) do |f| %>

			<%= f.label "Title:" %>
			<%= f.text_field "title", class: "form-control" %>
			<%= f.label "Body:" %>
			<%= f.text_field "body", class: "form-control" %>
			<ul id="myTags">
    <!-- Existing list items will be pre-added to the tags -->
			    
			</ul>
			<%= f.submit "Create post", class: "btn btn-primary col-md-6 col-md-offset-3 btn-new-post"%>
		<% end %>
	</div>
</div>


<script type="text/javascript">
    $(document).ready(function() {
      $("#myTags").tagit();

    });


    $('.btn').click(function () {
        alert($("#myTags").tagit("assignedTags"));
    })

</script>

